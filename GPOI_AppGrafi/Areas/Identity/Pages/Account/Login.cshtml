@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div>
    <div>
        <section>
            <form id="account" method="post">
                <div class="login">
                <div class=" form-item">
                    <h1>Accedi</h1>
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class=" form-group">
                        <label class="form-label">Indirizzo e-mail:</label>
                        <input asp-for="Input.Email" id = "mail" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label class="form-label">Password:</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="button">Log in</button>
                    </div>
                        <div class="change-form-button">
                            <p >Non possiedi un account? </p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrati</a>
                        </div>
                </div>
                </div>
            </form>
        </section>
    </div>
    <script src="script.js"></script>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
